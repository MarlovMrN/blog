<%- include('partials/header.ejs') %>

<div class="container-sm">
  <% if(locals.post) {%>
    <h1>Edit Blog Post</h1>
  <% } else { %>
    <h1>New Blog Post</h1>
  <% } %>
  <hr>
  <% if(locals.post) {%>
    <form action="/editpost/<%= post.id %>" method="post">
  <%} else{  %>
    <form action="/savepost" method="post">
  <% } %>  
    <div class="form-group">
      <label for="postTitleInput">Title</label>
      <input type="text" class="form-control form-control-lg" value="<%= locals.post ? post.title : '' %>"      id="postTitleInput" name="postTitle" placeholder="Awesome post title here" required>
    </div>
    <div class="form-group">
      <label for="postBodyInput">Post Content</label>
      <textarea class="form-control"   id="postBodyInput" name="postBody" rows="15" placeholder="Let your mind fly and type from your heart." required><%= locals.post ? post.body : '' %></textarea>
    </div>  
    <button type="submit" class="btn btn-primary"><%= locals.post ? 'Update Post' : 'Create Post' %></button>
  </form>
</div>




<%- include('partials/footer.ejs') %>